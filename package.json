{
  "name": "strider-email-notifier",
  "version": "1.0.0",
  "description": "Enables Strider to email notifications based on certain events",
  "main": "webapp.js",
  "publishConfig": {
    "registry": "http://registry.npmjs.org"
  },
  "scripts": {
    "test-only": "mocha -R spec",
    "test": "npm run lint && istanbul cover node_modules/mocha/bin/_mocha -- -R spec",
    "lint": "eslint *.js lib",
    "posttest": "istanbul check-coverage",
    "prepublish": "npm test && npm prune"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/Strider-CD/strider-email-notifier.git"
  },
  "keywords": [
    "strider",
    "email",
    "plugin"
  ],
  "engines": {
    "node": ">=4.2"
  },
  "author": "Adam Duncan <adam.jd@gmail.com>",
  "license": "MIT",
  "strider": {
    "type": "job",
    "id": "emailnotifier",
    "title": "Email Notifier",
    "webapp": "webapp.js",
    "worker": "worker.js",
    "config": {
      "controller": "EmailNotifierCtrl"
    },
    "icon": "icon.png"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "expect.js": "~0.3.1",
    "istanbul": "~0.4.4",
    "mocha": "^5.2.0"
  },
  "dependencies": {
    "async": "~2.0.1",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "pug": "^2.0.0-beta6",
    "strider-mailer": "git+https://github.com/alagopus/strider-mailer.git#develop"
  }
}
